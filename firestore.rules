rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /users/{userId} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == userId);

      allow create: if isSignedIn() && request.auth.uid == userId
        && request.resource.data.userId == userId
        && request.resource.data.isAdmin == false;

      allow update: if isSignedIn() && request.auth.uid == userId
        && request.resource.data.userId == userId
        && request.resource.data.isAdmin == resource.data.isAdmin;

      allow delete: if false;
    }

    match /menuItems/{itemId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /menuCategories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /siteSettings/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /chefs/{chefId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /blogPosts/{postId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /newsletterSubscribers/{subId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /carts/{userId}/items/{itemId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /orders/{orderId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update: if isAdmin() || (
        isSignedIn() &&
        resource.data.userId == request.auth.uid &&
        resource.data.status == 'pending' &&
        request.resource.data.status == 'cancelled_customer' &&
        request.resource.data.userId == resource.data.userId &&
        request.resource.data.diff(resource.data).changedKeys().hasOnly(['status', 'cancelledAt', 'updatedAt'])
      );
      allow delete: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
